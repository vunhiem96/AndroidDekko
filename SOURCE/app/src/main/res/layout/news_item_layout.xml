<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="17dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/img_news_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_new_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#650A0A0A"
            android:text="Tân CEO của Dekko là ai?"
            android:textColor="#FAF8F8"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_link_new1"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/yellow_round_bg"
            android:drawableRight="@mipmap/ic_smart_next"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="Chi tiết"
            android:textColor="#9FE90606" />
    </android.support.v7.widget.CardView>

</RelativeLayout>